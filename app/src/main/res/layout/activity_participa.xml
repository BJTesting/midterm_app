<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="48dp"
    android:paddingTop="40dp"
    android:paddingRight="48dp"
    android:paddingBottom="70dp"
    android:background="@color/colorLogin2"
    tools:context="com.example.moviles.midtermprojectandroid.SignUp">


    <TextView
        android:id="@+id/TituloP"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="Participa"
        android:textSize="30dp"
        android:textColor="@android:color/background_light"
        />


    <TextView
        android:id="@+id/Evento"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/TituloP"
        android:text="Evento Colegio Santa Catalina"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/background_light"

        />

    <TextView
        android:id="@+id/Evento2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/Evento"
        android:text="Evento Colegio El Agustino"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/background_light"

        />

    <TextView
        android:id="@+id/Evento3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/Evento2"
        android:text="Evento Colegio Santa Anita"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/background_light"

        />
    <TextView
        android:id="@+id/Evento4"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/Evento3"
        android:text="Evento Colegio Punta Negra"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/background_light"

        />

    <CheckBox
        android:id="@+id/cbEvento"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/TituloP"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/Evento"
        android:layout_toRightOf="@+id/Evento"
        app:buttonTint="@android:color/background_light" />
    <CheckBox
        android:id="@+id/cbEvento2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/Evento"
        android:layout_toEndOf="@+id/Evento2"
        android:layout_toRightOf="@+id/Evento2"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        app:buttonTint="@android:color/background_light"
        />
    <CheckBox
        android:id="@+id/cbEvento3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/Evento2"
        android:layout_toEndOf="@+id/Evento3"
        android:layout_toRightOf="@+id/Evento3"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        app:buttonTint="@android:color/background_light"
        />

    <CheckBox
        android:id="@+id/cbEvento4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/Evento3"
        android:layout_toEndOf="@+id/Evento4"
        android:layout_toRightOf="@+id/Evento4"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        app:buttonTint="@android:color/background_light"

        />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:text="Registrar"

        />

    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_toEndOf="@+id/btnGuardar"
        android:layout_toRightOf="@+id/btnGuardar"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:text="Regresar"

        />


</RelativeLayout>