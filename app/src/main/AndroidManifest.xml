<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moviles.midtermprojectandroid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Informacion"
            android:label="Informacion"
            android:parentActivityName=".Principal">
            <intent-filter>
                <action android:name="android.intent.action.Informacion" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Dona"
            android:label="Dona">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Principal"/>
            <intent-filter>
                <action android:name="android.intent.action.Dona" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".Crea"
            android:label="Crea">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Principal"/>
            <intent-filter>
                <action android:name="android.intent.action.Crea" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Participa"
            android:label="Participa">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Principal"/>
            <intent-filter>
                <action android:name="android.intent.action.Participa" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".SignUp" />
        <activity android:name=".LogIn" />
        <activity android:name=".Principal" />
        <activity android:name=".Profile" />
    </application>

</manifest>